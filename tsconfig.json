{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",

      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/tests/*"]
  }